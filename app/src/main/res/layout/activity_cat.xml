<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CatActivity"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/DetailImage"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:scaleType="centerCrop"></ImageView>

            <TextView
                android:id="@+id/DetailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="TextView"
                android:textColor="#FCA3B7"
                android:textAlignment="center"
                android:textSize="40sp"
                app:fontFamily="@font/pattaya" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="5sp"
                android:fontFamily="serif"
                android:text="Description"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DetailDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="5sp"
                android:fontFamily="serif"
                android:text="TextView"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="5sp"
                android:fontFamily="serif"
                android:text="Weight:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DetailImperial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="1sp"
                android:layout_marginRight="5sp"
                android:fontFamily="serif"
                android:text="TextView"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/DetailMetric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="5sp"
                android:fontFamily="serif"
                android:text="TextView"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="5sp"
                android:fontFamily="serif"
                android:text="Temperament:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DetailTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="5sp"
                android:fontFamily="serif"
                android:text="TextView"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="5sp"
                android:fontFamily="serif"
                android:text="Origin:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DetailOrigin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="5sp"
                android:fontFamily="serif"
                android:text="TextView"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="5sp"
                android:fontFamily="serif"
                android:text="Life Span:"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/DetailLife"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="5sp"
                android:fontFamily="serif"
                android:text="TextView"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="5sp"
                android:fontFamily="serif"
                android:text="Dog Friendliness Level:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DetailDog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="5sp"
                android:fontFamily="serif"
                android:text="TextView"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="5sp"
                android:fontFamily="serif"
                android:text="Wikipedia Link:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DetailWiki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="5sp"
                android:autoLink="web"
                android:fontFamily="serif"
                android:text="TextView"
                android:textSize="15sp" />

            <Button
                android:id="@+id/FavouriteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:text="Add to Favourites"
                android:background="#FFFFFF"
                android:fontFamily="serif">

            </Button>

        </LinearLayout>

    </ScrollView>


</LinearLayout>